<p style="color: green"><%= notice %></p>

<%= render @category %>

<% @category.recipes.each do |recipe| %>
  <h5>
    <%= link_to recipe_path(recipe) do %>
      <%= recipe.title %>
    <% end %>
  </h5>
<% end %>
<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete, class: 'btn btn-danger' %>
</div>
